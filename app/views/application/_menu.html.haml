%div.position-fixed.bg-success.d-flex.justify-content-center.h-100.w-8vh
  %div.d-flex.flex-column.justify-content-evenly
    %div.align-self-center.d-flex.flex-column.justify-content-center
      
      
      - if resource.is_a?(Doctor)
        = render partial: 'doctors/links'
      - else
        = render partial: 'users/links'
    %div.align-self-end.d-flex.flex-column.justify-content-center.mx-auto
      
      %div.dropdown.mx-auto
        %a#dropdownMenu.bg-success{ type: :button, 'data-bs-toggle': 'dropdown', 'aria-expanded': false }
          %i.fa-solid.fa-circle-user.mb-3.white.fsr-2and5.p-1.borders
        %div.dropdown-menu{ 'aria-labelledby': 'dropdownMenu' }
          %a.dropdown-item{ href: edit_registration_path(resource) }= t(:profile)
          = button_to t(:exit), destroy_session_path(resource), { class: 'dropdown-item', method: :delete }
